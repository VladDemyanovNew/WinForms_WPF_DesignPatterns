<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="HeaderStyle" TargetType="Grid">
        <Setter Property="Background" Value="Gray" />
    </Style>
    <Style x:Key="BackgroundGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="#FF494949"/>
    </Style>
    <Style x:Key="FilterSectionStyle" TargetType="Grid">
        <Setter Property="Background" Value="#FFB1B1B1"/>
    </Style>
</ResourceDictionary>